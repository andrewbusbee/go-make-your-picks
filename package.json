{
  "name": "go-make-your-picks",
  "version": "1.0.0",
  "description": "Sports championship prediction game for friends and family",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:e2e": "cd e2e && npm test",
    "test:e2e:ui": "cd e2e && npm run test:ui",
    "test:e2e:headed": "cd e2e && npm run test:headed",
    "test:e2e:debug": "cd e2e && npm run test:debug",
    "test:e2e:install": "cd e2e && npm install && npx playwright install"
  },
  "keywords": [],
